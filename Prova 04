inicio = int(input("Digite o primeiro numero do seu intervalo: "))
fim = int(input("Digite o ultimo numero do seu intervalo: "))
soma = 0
n_par = False

for numero in range(inicio, fim + 1):
    if numero % 2 == 0:
        soma += numero
        n_par = True
else:
    if n_par:
        print(f"A soma dos pares Ã©: {soma}")
    else:
        print("Sem numeros pares no seu intervalo.")
